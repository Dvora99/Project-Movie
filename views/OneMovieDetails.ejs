                    <div class="carousel-caption d-md-block">
                        <h1>
                            <%= Movie.MovieName %>
                        </h1>
                        <br>
                        <span style="margin-bottom: 40px;">
                            <%= Movie.MovieType %>
                        </span>
                        <br><br>
                        <span>
                            <%= Movie.ScreenType %>
                        </span>
                        <span style="margin-left: 20px;">
                            <%= Movie.Language %>
                        </span>
                        <br><br>
                        <span style=" background-color: #fff; color: black; padding: 2px 4px; border-radius: 5px;">
                            <%= Movie.Duration %>
                        </span>
                        <span style="margin-left: 15px; background-color: #fff; color: black; padding: 2px 4px; border-radius: 5px;">
                            <%= Movie.Date %>
                        </span>
                        <br><br>
                        <p>
                            <%= Movie.Description %>
                        </p>
                        <ul class="mb-0 mt-3">
