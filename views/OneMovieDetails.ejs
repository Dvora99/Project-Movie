    <style>
        .carousel-caption {
            position: absolute;
            top: 20%;
            text-align: left;
            padding: 30px 20px;
            bottom: 8rem;
            left: 35%;
            width: 60%;
            color: #fff;
        }

        :root {
            --size: 150px;
            --radius: calc(var(--size) * 20 / 100);
        }

        body {
            margin: 0;
        }

        main {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100%;
            margin: auto;
        }

        .image-card {
            width: var(--size);
            height: var(--size);
            border-radius: var(--radius);
            position: relative;
            background-size: cover;
            margin: calc(var(--size) * 20 / 100);
        }
